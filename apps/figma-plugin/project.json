{
  "name": "figma-plugin",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/figma-plugin/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/dist/apps/figma-plugin"],
      "options": {
        "command": "node apps/figma-plugin/scripts/build.mjs",
        "cwd": "{workspaceRoot}"
      }
    },
    "package": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "options": {
        "command": "cd dist/apps/figma-plugin && zip -r ../figma-plugin.zip .",
        "cwd": "{workspaceRoot}"
      }
    }
  },
  "tags": ["scope:figma", "type:app"]
}
