{
  "name": "tokens",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/tokens",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node packages/tokens/scripts/build-tokens.js",
        "outputs": ["{workspaceRoot}/dist/packages/tokens"]
      }
    },
    "package": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "options": {
        "command": "node packages/tokens/scripts/package-tokens.js && npm pack ./dist/packages/tokens",
        "outputs": ["{workspaceRoot}/*.tgz"]
      }
    },
    "sync-figma": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node packages/tokens/scripts/sync-figma-variables.js"
      }
    },
    "minify": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node packages/tokens/scripts/minify-css.js"
      }
    },
    "clean": {
      "executor": "nx:run-commands",
      "options": {
        "command": "rm -rf packages/tokens/json dist/packages/tokens"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "vitest run packages/tokens/scripts/__tests__/"
      }
    }
  },
  "tags": ["scope:tokens", "type:package"]
}
